<div class="row">
    <div class="col-sm-2">
    </div>

    <div class="col-sm-8">
      <div class="panel panel-default login-form">
        <div class="panel-heading">
          <h3 class="panel-title">Login Form</h3>
        </div>
        <div class="panel-body">
            {{#bs-form formLayout="horizontal" invalid="invalid" model=this action="login" value=identification}}
              {{bs-form-element controlType="email" label="Email" placeholder="Email" property="email"}}
              {{bs-form-element controlType="password" label="Password" placeholder="Password" property="password" value=password}}
              {{bs-form-element controlType="checkbox" label="Remember me" property="rememberMe"}}
              <div class="pull-left" style="line-height: 40px;">
                {{#link-to "login.password-recovery"}}Forgot your password?{{/link-to}}
              </div>
              <div class="pull-right">
                {{bs-button defaultText="Register" type="default" buttonType="button" onClick=(action "registration")}}
                {{bs-button defaultText="Login" type="primary" buttonType="submit"}}
              </div>
            {{/bs-form}}
        </div>
        {{#if errorMessage}}
          <p>{{errorMessage.errors}}</p>
        {{/if}}
      </div>
    </div>

    <div class="col-sm-2">
    </div>
</div>
