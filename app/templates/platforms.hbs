<div class="platforms">
  <div class="top-section">
    <div class="row">
      <div class="col-xs-12">
        <h3>Platforms</h3>
      </div>
    </div>
  </div>

  <div class="clearfix" style="clear: both;"> <hr> </div>

  <div class="row">
    <div class="col-sm-12">
      <div class="well">
        {{#each model as |platform|}}
          {{#link-to 'platform' platform}}{{fa-icon "list-alt"}} {{platform.name}}{{/link-to}}<br>
        {{/each}}
      </div>
    </div>
  </div>

  <span class="block-header">* See the tools section in the menu</span>

</div>
