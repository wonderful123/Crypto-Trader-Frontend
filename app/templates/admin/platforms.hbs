<div class="col-sm-12">
  <div class="well">
    <div class="row">
      <span class="block-header">Create new platform</span>
      {{#bs-form model=this onsubmit=(action "createPlatform") as |form|}}
        {{form.element controlType="text" label="Name" placeholder="Name" property="name" required=true}}
        {{form.element controlType="text" label="API Name" placeholder="API Name" property="apiName" required=true}}
        {{form.element controlType="text" label="Website" placeholder="Website" property="website" required=true}}
        {{bs-button defaultText="Create Platform" type="primary" buttonType="submit"}}
      {{/bs-form}}
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-lg-5">
        <div class="panel-heading">
          <h3 class="panel-title">Platforms:</h3>
        </div>
        <div class="panels">
          <div class="panel-body">
            <table class="table table-hover platforms">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Name</th>
                  <th>API Name</th>
                  <th>Website</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
                {{#each model as |platform|}}
                  <tr>
                    <td><span class="badge bg-green-0">{{platform.id}}</span></td>
                    <td {{action 'showMarket' platform}}>
                      <nobr>{{platform.name}}</nobr>
                    </td>
                    <td>
                      <nobr>{{platform.apiName}}</nobr>
                    </td>
                    <td>
                      <nobr>{{platform.website}}</nobr>
                    </td>
                    <td><span {{action 'delete' platform bubbles=false}} class="badge bg-red-0">{{fa-icon "trash-o" title="Delete the platform"}}</span></td>
                  </tr>
                  {{else}}
                    <tr>
                      <td>
                        <nobr>No platforms found</nobr>
                      </td>
                    </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
